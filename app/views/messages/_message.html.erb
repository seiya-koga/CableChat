
<div class="card">
  <div class="card-block">
    <div class="row">
      <div class="col-md-1">
        <%= gravatar_for message.user %>
      </div>
      <div class="col-md-11">
        <p class="card-text">
        <span class="nickname-strong"><%= message.user.nickname %></span>

          <span class="text-muted"> at <%= message.timestamp %></span><br>
          <%= message.body %>
        </p>
      </div>
    </div>

  </div>
</div>